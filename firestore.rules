
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Permitir acesso aos usuários autenticados à coleção de usuários
    match /users/{userId} {
      allow read, write: if request.auth != null;
    }
    
    // Permitir acesso aos usuários autenticados à coleção de sites
    match /sites/{siteId} {
      allow read, write: if request.auth != null;
    }
    
    // Regra mais específica para administradores (opcional)
    // match /users/{userId} {
    //   allow read, write: if request.auth != null && 
    //     (request.auth.token.email == 'originaldigitaloficial@gmail.com' ||
    //      get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['master', 'admin']);
    // }
  }
}
